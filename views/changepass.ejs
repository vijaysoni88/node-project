<% include userheader %>

<section id="contact">
  <div class="container mt-5">

    <div class="section-header mt-5 pb-2">
      <h3>Change Password</h3>
    </div>

    <div class="row wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">

      <div class="col-lg-6 offset-lg-3 shadow p-5">
        <p class="text-warning"><%= msg%></p>
        <form method="POST" action="">
            <div class="form-group">
              <input type="text" name="opass" class="form-control mb-3" placeholder="Old Password">
              <input type="text" name="npass" class="form-control mb-3" placeholder="New Password">
              <input type="text" name="cpass" class="form-control mb-3" placeholder="Confirm New Password">
            </div>
            <div class="text-center">
                <button type="submit" class="ml-auto btn btn-primary">Update Password</button>
            </div>
          </form>
        </div>
      </div>

    </div>

  </div>
</section>

<% include footer %>